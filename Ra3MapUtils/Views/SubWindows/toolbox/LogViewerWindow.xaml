<ui:FluentWindow x:Class="Ra3MapUtils.Views.SubWindows.toolbox.LogViewerWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ra3MapUtils.Views.SubWindows.toolbox"
                 d:DataContext="{d:DesignInstance Type=vm:LogViewerWindowViewModel, IsDesignTimeCreatable=True}"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:vm="clr-namespace:Ra3MapUtils.ViewModels.toolbox"
                 d:DesignHeight="1650"
                 d:DesignWidth="1000"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 mc:Ignorable="d"
                 Title="LogViewerWindow" Height="450" Width="800"
                 ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStyle="SingleBorderWindow"
                 
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="地图日志查看器" ShowMaximize="False">
            
        </ui:TitleBar>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:Button Grid.Column="0" Icon="{ui:SymbolIcon Document16}" Content="指定日志文件"/>
            <TextBlock Grid.Column="1" Text="{Binding LogFileName}"/>
        </Grid>
        
        
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="日志级别" VerticalAlignment="Center" Margin="0,0,5,0"/>
            
           <ComboBox Grid.Column="1" Margin="5,0,0,0" SelectedIndex="{Binding LogLevelIndex}">
               <ComboBox.Items>
                     <ComboBoxItem Content="TRACE" Foreground="DimGray"/>
                     <ComboBoxItem Content="DEBUG" Foreground="DodgerBlue"/>
                     <ComboBoxItem Content="INFO" Foreground="LimeGreen"/>
                     <ComboBoxItem Content="WARN" Foreground="Gold"/>
                     <ComboBoxItem Content="ERROR" Foreground="Crimson"/>
               </ComboBox.Items>
           </ComboBox>
        </Grid>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <ui:Button Content="从头解析" Command="{Binding StartFromBeginningCommand}"/>
            <ui:Button Content="从最新位置解析" Command="{Binding StartFromLatestCommand}"/>
            <ui:Button Content="从上次停止解析" Command="{Binding StartFromLastStopPosCommand}"/>
            <ui:Button Content="中止解析" Command="{Binding StopCommand}" Foreground="Red"/>
            <TextBlock Text="解析状态: " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ParseStatus}" Foreground="{Binding ParseStatusColor}" />
        </StackPanel>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="15, 15, 15, 15" >
            
        </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
